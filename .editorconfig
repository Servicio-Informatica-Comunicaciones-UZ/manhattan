# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css,scss,json,yml}, nginx.conf]
indent_size = 2

[*.py]
default_section = THIRDPARTY
force_grid_wrap = 0
include_trailing_comma = true
known_first_party = goku,config
max_line_length = 119
multi_line_output = 3
recursive = true
skip = venv/
skip_glob = **/migrations/*.py
use_parentheses = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

# reStructuredText
[*.rst]
trim_trailing_whitespace = false
